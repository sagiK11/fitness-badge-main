FROM dpage/pgadmin4

RUN --mount=type=secret,id=PGADMIN_SERVICE__PGADMIN_DEFAULT_EMAIL \
  --mount=type=secret,id=PGADMIN_SERVICE__PGADMIN_DEFAULT_PASSWORD \
   export PGADMIN_DEFAULT_EMAIL=$(cat /run/secrets/PGADMIN_SERVICE__PGADMIN_DEFAULT_EMAIL) && \
   export PGADMIN_DEFAULT_PASSWORD=$(cat /run/secrets/PGADMIN_SERVICE__PGADMIN_DEFAULT_PASSWORD) 
