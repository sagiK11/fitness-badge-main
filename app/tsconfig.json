{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@models": ["models"],
      "@models/*": ["models/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@resources": ["res"],
      "@resources/*": ["res/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "src/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
